<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12sp"
    tools:context=".adddnotficat"
>

    <EditText
        android:id="@+id/neditTitle"
        android:layout_width="0dp"
        android:background="@drawable/mainbutton"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Title"
        android:textColorHint="@color/main"
        android:textColor="@color/main"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:maxWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/neditdescription"
        android:background="@drawable/mainbutton"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_below="@+id/neditTitle"
        android:textColorHint="@color/main"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Description"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:maxWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/neditTitle" />


    <Button
        android:id="@+id/btnninsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/mainbutton"
        android:backgroundTint="#14598F"
        android:text="Post Notification"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neditdescription" />

</androidx.constraintlayout.widget.ConstraintLayout>