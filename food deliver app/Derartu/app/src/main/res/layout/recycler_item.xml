<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/recImage"
            android:src="@drawable/ic_baseline_arrow_circle_up_24"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/qrimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_circle_down_24"
            />

        <TextView
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:id="@+id/recTitle"
            android:text="Title"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/recImage"
            android:layout_marginStart="-140dp"
            android:layout_toEndOf="@id/recImage"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recLang"
            android:text="priority"
            android:layout_toEndOf="@id/recTitle"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recemail"
            android:text="Description"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@id/recTitle"
            android:layout_marginStart="-280dp"
            android:layout_below="@+id/recDesc"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="8sp"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDesc"
            android:text="Additional Information"
            android:fontFamily="@font/poppins"
            android:textColor="@color/main"
            android:textSize="12sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="-140dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/recid"
            android:text="ID"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/qrimg"
            android:layout_marginStart="65dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/etb"
            android:text="ETB"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/qrimg"
            android:layout_marginStart="138dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>