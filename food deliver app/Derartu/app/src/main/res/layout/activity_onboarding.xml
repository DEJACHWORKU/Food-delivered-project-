<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding">

    <ImageView
        android:id="@+id/arulogo1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/mainlogoo"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/arutxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arulogo1"
        android:fontFamily="@font/poppins"
        android:text="Welcome to Derartu Hotel"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/arutxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arutxt1"
        android:fontFamily="@font/poppins"
        android:text="@string/descr"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="17dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Using The app"
        android:layout_below="@id/arutxt2"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/mainbutton" />


</RelativeLayout>