<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deliveryboy">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins"
        android:text="Welcome Delivery Boy"
        android:textAlignment="center"
        android:textColor="@color/main"
        android:textSize="20sp" />

    <ScrollView
        android:layout_marginTop="140dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/delivorder"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clothingName4"
                        android:text="New Order"
                        android:textSize="20sp"
                        android:textColor="@color/main"
                        android:fontFamily="@font/poppins"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="85dp"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/clothingImage2"
                        android:src="@drawable/ic_baseline_newspaper_24"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="60dp"
                        android:padding="0dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/inoutdoor"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/insviewbook1"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clothingName5"
                        android:text="Logout"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/main"
                        android:fontFamily="@font/poppins"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="85dp"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/clothingImage3"
                        android:src="@drawable/ic_baseline_logout_24"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="50dp"
                        android:padding="5dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>